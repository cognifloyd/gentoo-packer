{
  "description": "Faithful Stage 3 Gentoo Installation",

  "variables": {
    "stage3":   "20140522",
    "username": "root",
    "password": "packer"
  },

  "builders": [
    {
      "vm_name":              "Gentoo",
      "type":                 "virtualbox-iso",
      "guest_os_type":        "Gentoo_64",
      "iso_url":              "http://distfiles.gentoo.org/releases/amd64/autobuilds/{{user `stage3`}}/install-amd64-minimal-{{user `stage3`}}.iso",
      "iso_checksum":         "7fd77954a1c102044963e6b6964349b5485f01ea9131429d671463ed001f5d50db643c3ce0273ff80aab8da19a12d4ae452d65af128f6d038dfa0767c607b728",
      "iso_checksum_type":    "sha512",
      "ssh_username":         "{{user `username`}}",
      "ssh_password":         "{{user `password`}}",
      "ssh_wait_timeout":     "10s",
      "shutdown_command":     "shutdown -hP now",
      "disk_size":            60000,
      "guest_additions_mode": "disable",
      "headless":             false,
      "boot_wait":            "5s",

      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "{{user `password`}}",
        "<enter>",
        "{{user `password`}}",
        "<enter>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ]
    }
  ],

  "provisioners": [
    {
      "type":        "file",
      "source":      "scripts",
      "destination": "/root"
    },
    {
      "type":             "shell",
      "environment_vars": ["STAGE3={{user `stage3`}}"],
      "scripts":          ["provision.sh"]
    }
  ],

  "post-processors": ["vagrant"]
}
